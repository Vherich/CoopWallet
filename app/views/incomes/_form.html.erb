<div class= 'total-box mt-4'>
   <%= simple_form_for [@group, Income.new], html: {data: {controller: "flatpickr"}} do |f|  %>
   <div class="row">
    <div class="col-2"><%= f.input :date, as: :string, input_html: { data: { flatpickr_target: "date" } }, label: "Data" %></div>
    <div class="col-3"><%= f.input :income_category,  collection: Income::CATEGORY, label: "Categoria" %></div>
    <div class="col-5"><%= f.input :description, label: "Descrição" %></div>
    <div class="col-2"><%= f.input :value, label: "Valor (R$)" %></div>
    <div><%= f.submit "Adicionar Entrada", class:"btn btn-success btn lg mt-2" %></div>
   <% end %>
   </div>
</div>
