<div class="container">
  <h1>Entradas</h1>

  <canvas
  data-controller="chart"
  data-chart-data-value="<%= @chart_data.to_json %>"
  data-chart-options-value="<%= @chart_options.to_json %>"
></canvas>

  <%= render partial: 'form' %>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Data</th>
          <th>Categoria</th>
          <th>Descrição</th>
          <th>Valor</th>
          <th>Forma de Pagamento</th>
          <th>Usuário</th>
        </tr>
      </thead>

      <tbody>
        <% @incomes.each do |income| %>
          <%= content_tag :tr, id: dom_id(income), class: dom_class(income) do %>
            <td><%= income.date %></td>
            <td><%= income.income_category %></td>
            <td><%= income.description %></td>
            <td><%= income.value %></td>
            <td><%= income.user.name %></td>
            <td><%= link_to 'Editar', root_path %></td>
            <td><%= link_to 'Deletar', root_path %></td>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
