<div>
   <%= simple_form_for [group, income], data: {controller: 'expense', action: 'submit->expense#edit', expense_url_value: request.path} do |f|  %>
    <%= f.input :date, label: "Data" %>
    <%= f.input :income_category, collection: Income::CATEGORY, label: "Categoria" %>
    <%= f.input :description, label: "Descrição" %>
    <%= f.input :value, label: "Valor" %>
    <%= f.submit "Salvar", class:"btn btn-primary" %>
   <% end %>
</div>
