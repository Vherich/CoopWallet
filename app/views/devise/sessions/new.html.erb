<div class="container mt-5">
<h2>Entrar</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" }, label:"Senha" %>
    <%= f.input :remember_me, label: "Lembrar conta", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Entrar" , class: "btn btn-light btn-lg" %>
  </div>
<% end %>
  <div class="mt-4">
    <%= render "devise/shared/links" %>
    </div>
</div>
