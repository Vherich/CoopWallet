<%= content_tag :tr, id: dom_id(outcome), class: dom_class(outcome) do %>
  <td><%= outcome.date %></td>
  <td><%= outcome.outcome_category %></td>
  <td><%= outcome.description %></td>
  <td><%= outcome.value %></td>
  <td><%= outcome.payment_form %></td>
  <td><%= outcome.user.name %></td>
  <td><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#outcomeModal-<%= outcome.id %>">Editar</button></td>
  <td><%=button_to 'Deletar', outcome_path(outcome), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Tem certeza?" } %></td>


  <div class="modal fade" id="outcomeModal-<%= outcome.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Editar</h5>
          <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= render partial: 'edit', locals: {group: @group, outcome: outcome } %>
        </div>
      </div>
    </div>
  </div>
<% end %>
