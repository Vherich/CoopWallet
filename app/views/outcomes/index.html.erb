<div class="container">
  <h1>Saídas</h1>

  <canvas class='total-box'
  data-controller="chart"
  data-chart-data-value="<%= @chart_data.to_json %>"
  data-chart-options-value="<%= @chart_options.to_json %>"
></canvas>

  <div class='total-box mt-4'><%= render partial: 'form' %></div>

  <div class="table-responsive mt-4">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Data</th>
          <th>Categoria</th>
          <th>Descrição</th>
          <th>Valor</th>
          <th>Forma de Pagamento</th>
          <th>Usuário</th>
        </tr>
      </thead>

      <tbody>
        <% @outcomes.reverse.each do |outcome| %>
          <%= render partial: 'outcome', locals: {outcome: outcome} %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
