<div class="container">
  <h1>Saídas</h1>
  <%= link_to "Adicionar usuário", new_group_membership_path(params[:group_id]), class:"btn btn-dark" %>

  <%= render partial: 'form', locals: {group: @group, outcome: Outcome.new} %>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Data</th>
          <th>Categoria</th>
          <th>Descrição</th>
          <th>Valor</th>
          <th>Forma de Pagamento</th>
          <th>Usuário</th>
        </tr>
      </thead>

      <tbody>
        <% @outcomes.reverse.each do |outcome| %>
          <%= render partial: 'outcome', locals: {outcome: outcome} %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
