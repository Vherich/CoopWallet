<div class="container">
  <h1>Saídas</h1>
  <%= link_to "Adicionar usuário", new_group_membership_path(params[:group_id]), class:"btn btn-dark" %>
  <%= render partial: 'form' %>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Data</th>
          <th>Categoria</th>
          <th>Descrição</th>
          <th>Valor</th>
          <th>Forma de Pagamento</th>
          <th>Usuário</th>
        </tr>
      </thead>

      <tbody>
        <% @outcomes.reverse.each do |outcome| %>
          <%= content_tag :tr, id: dom_id(outcome), class: dom_class(outcome) do %>
            <td><%= outcome.date %></td>
            <td><%= outcome.outcome_category %></td>
            <td><%= outcome.description %></td>
            <td><%= outcome.value %></td>
            <td><%= outcome.payment_form %></td>
            <td><%= outcome.user.name %></td>
            <td><%= link_to 'Editar', outcome %></td>
            <td><%= link_to 'Deletar', outcome %></td>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
