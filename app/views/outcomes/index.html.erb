<div class="container">
  <div class="text-center mt-3 mb-3">
    <h1>Saídas</h1>
  </div>

  <canvas class='total-box'
  data-controller="chart"
  data-chart-data-value="<%= @chart_data.to_json %>"
  data-chart-options-value="<%= @chart_options.to_json %>">
  </canvas>

  <div class='total-box mt-4'><%= render partial: 'form' %></div>

  <div class="table-responsive mt-4">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th class="text-center" style="width: 150px">Data</th>
          <th class="text-center">Categoria</th>
          <th class="text-center">Descrição</th>
          <th class="text-center" style="width: 150px">Valor</th>
          <th class="text-center">Usuário</th>
          <th class="text-center" style="width: 150px">Ações</th>
        </tr>
      </thead>

      <tbody>
        <% @outcomes.reverse.each do |outcome| %>
          <%= render partial: 'outcome', locals: {outcome: outcome} %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
