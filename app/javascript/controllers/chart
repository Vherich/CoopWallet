class ChartsController < ApplicationController
  def index
    @chart_data = {
      labels: @income.date,
      datasets: [{
        label: 'Tabela de ganhos',
        backgroundColor: 'transparent',
        borderColor: '#3B82F6',
        data: @income.value
      }]
    }

    @chart_options = {
      scales: {
        yAxes: [{
          ticks: {
            beginAtZero: true
          }
        }]
      }
    }
  end
end
